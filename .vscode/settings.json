{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-lock.yaml,pnpm-workspace.yaml,LICENSE,.gitattributes,.gitignore,.gitpod.yml,CNAME,README*,.npmrc,.browserslistrc",
    ".eslintrc": ".eslintignore,.prettierignore,.stylelintignore,.commitlintrc.js,.prettierrc.js,.stylelintrc.js",
    "nuxt.config.ts": "uno.config.ts",
    "index.d.ts": "*.d.ts"
  },
  "terminal.integrated.scrollback": 10000,
  // "css.validate": false,
  // "less.validate": false,
  // "scss.validate": false,
}
